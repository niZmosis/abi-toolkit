{
  "private": true,
  "name": "abi-toolkit",
  "version": "1.0.0",
  "description": "Generate types from an ethereum ABI json file.",
  "keywords": [
    "ethereum",
    "blockchain",
    "types",
    "abi",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/niZmosis/abi-toolkit/issues"
  },
  "homepage": "https://github.com/niZmosis/abi-toolkit#readme",
  "author": "niZmosis",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "wipe": "lerna clean -y && rm -rf node_modules && find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && find . -name 'dist' -type d -prune -exec rm -rf '{}' +",
    "clean": "lerna clean --yes",
    "lint": "pnpm eslint --ext .ts,.tsx,.js,.jsx . --fix",
    "prettier": "prettier --write .",
    "build:docs": "typedoc",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:converter:ts": "vitest ./packages/converter-typescript/tests",
    "test:core": "vitest ./packages/core/tests",
    "test:utils": "vitest ./packages/utils/tests",
    "test:single": "vitest ./packages/converter-typescript/tests/abi-generator.spec.ts",
    "test:coverage": "vitest run --coverage",
    "build": "lerna run build",
    "start": "lerna run start --parallel --ignore 'examples'",
    "rebuild": "pnpm clean && pnpm build",
    "restart": "pnpm clean && pnpm start",
    "prepack": "pnpm build",
    "publish": "lerna run prepublish && lerna publish from-package --yes",
    "publish:dry": "lerna run prepublish && lerna publish from-package --yes --dry-run"
  },
  "devDependencies": {
    "@types/eslint": "8.56.11",
    "@types/node": "22.6.1",
    "@typescript-eslint/eslint-plugin": "7.17.0",
    "@typescript-eslint/parser": "7.17.0",
    "@vitest/coverage-v8": "2.0.5",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-unused-imports": "3.2.0",
    "lerna": "8.1.8",
    "prettier": "3.3.3",
    "typedoc": "0.26.6",
    "typedoc-github-wiki-theme": "2.0.0",
    "typedoc-plugin-markdown": "4.2.7",
    "typescript": "5.5.4",
    "vitest": "2.0.5"
  }
}
